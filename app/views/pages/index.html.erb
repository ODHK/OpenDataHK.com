<div class="container landing">
  <div class="row">
    <div class="span12">
      <div class="banner-container">
        <h1 class="hide-text">Open Data Hong Kong</h1>
      </div>
      <footer>
        <p>The data renaissance is here. Be a part of it.</p>
      </footer>
    </div>
  </div>
  <div class="row">
    <div class="blog span8">
      <h2>Recent Blog Entries</h2>
      <% @posts.each do |p| %>
        <section style="background-image: url(<%= post_img_html(p) %>)">
          <div>
          <%= link_to(p) do %> 
            <h3> <%= p.title %> </h3>
          <% end %>
          <%= post_summary_html(p) %>
          </div>
        </section>
      <% end %>
    </div><!--/span-->
    <div class="event span4">
      <h2>Upcoming Events</h2>
      <%= link_to(image_tag("events/meet8.png", :alt => "Meet.08"), "https://plus.google.com/events/c9o3gsb198omiagrtodm3a1482o?authkey=CI3SwOOr4siHyQE") %>
    </div>
  </div>
  <!-- <div class="row">
    <div class="person span3">
    </div>
    <div class="project span9">
    </div>
  </div>-->
</div>

